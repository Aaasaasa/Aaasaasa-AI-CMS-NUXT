// prisma/adapters/schema-mongo.prisma
// Prisma 7: datasource configured via prisma.config.js
// URL is passed to PrismaClient constructor
// Commands:
// yarn prisma format --schema=prisma/adapters/schema-mongo.prisma
// yarn prisma generate --schema=prisma/adapters/schema-mongo.prisma
// yarn prisma db push --schema=prisma/adapters/schema-mongo.prisma

generator mongo {
  provider   = "prisma-client"
  engineType = "binary"
  output     = "../generated/mongo"
}

datasource db {
  provider = "mongodb"
}

model mgArticle {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  title   String
  body    String?
  tags    String[]
  created DateTime @default(now())
}
